# fungsi dengan multiple argument
def hitung_volume_kerucut(jari_jari, tinggi):
    pi = 22/7
    volume = 1/3 *pi* jari_jari**2*tinggi
    return volume

jari_jari = int(input("Masukkan nilai jari-jari kerucut: "))
tinggi = int(input("Masukkan nilai tinggi kerucut: "))

volume_kerucut = hitung_volume_kerucut(jari_jari, tinggi)

print("Volume kerucut: " + str(volume_kerucut))


